#include "timer.h"


void DW_TIMER1_ISR_callBackFunction(void);


uint8 seconds=0;
uint8 minutes=0;
uint8 hours=0;

int main(void)
{
	configType_TIMER timer1_configs = {TIMER1, TIMER_F_CPU_64, 8000, OCx_DISABLED};
	uint8 _7seg_select=0;

	DDRC = 0b00111111;
	PORTC = 0x00;

	DDRA = 0b00001111;
	PORTA = 0x00;

	__TIMER_CTC_setISRCallBackFuncPointer(TIMER1, DW_TIMER1_ISR_callBackFunction);
	__TIMER_CTC_startTimer(&timer1_configs);

	while(1)
	{
		_7seg_select++;

		if( _7seg_select == 6 )
			_7seg_select = 0;

		switch(_7seg_select)
		{
		case 0:
			break;
		case 1:
			break;
		case 2:
			break;
		case 3:
			break;
		case 4:
			break;
		case 5:
			break;
		}
	}
	return 0;
}


void DW_TIMER1_ISR_callBackFunction(void)
{
	seconds++;

	if(seconds == 60)
	{
		seconds = 0;
		minutes++;
	}
}
